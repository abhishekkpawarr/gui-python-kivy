WidgetsExample:

<WidgetsExample>:
    cols: 3

    ToggleButton:
        text:"OFF"
        on_state: root.on_toggle_button(self)
        size_hint: None, 1
        width: "100dp"
    Button:
        text:"Click Here"
        on_press: root.on_button_click()
        disabled: not root.count_enabled
    Label:
        text: root.my_text
        font_name: "fonts/Lcd.ttf"
        font_size: "80dp"
        color: 1, 0.5, 1, 1

    Switch:
        id: my_switch
        on_active: root.on_switch_active(self)
        size_hint: None, 1
        width: "100dp"
    Slider:
        disabled: not my_switch.active
        id: my_slider
        min:0
        max:100
        value: 50
        orientation: "vertical"
        # on_value: root.on_my_slider(self)
    BoxLayout:
        orientation: "vertical"
        Label:
            # text: root.my_slider_txt
            text: str(my_slider.value)
        ProgressBar
            max: 100
            value: my_slider.value

    BoxLayout:
        size_hint: None, 1
        width: "100dp"
        orientation: "vertical"
        Label:
            size_hint: None, None
            width: "100dp"
            height: "50dp"
            text: "Type here:"
        TextInput:
            id: my_text_input
            size_hint: None, 1
            width: "100dp"
            text: "text"
            multiline: False
            on_text_validate: root.on_text_validate(self)
    Label:
        text: root.text_input_str
    Image:
        source:"images/lab_logo.png"